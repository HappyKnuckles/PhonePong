<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Deny cleartext traffic by default for security -->
    <base-config cleartextTrafficPermitted="false" />
    
    <!-- Allow cleartext traffic ONLY for the backend server (hackathon mode) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.178.85</domain>
    </domain-config>
</network-security-config>
